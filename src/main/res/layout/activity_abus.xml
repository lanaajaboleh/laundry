<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:navigationIcon="@drawable/ic_back">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Tentang Saya"
                    android:textColor="@color/primaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" android:layout_centerInParent="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="541dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/muhamad_rafdan_maulana_foto"/>

            <LinearLayout
                    android:layout_width="221dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:layout_width="233dp"
                        android:layout_height="wrap_content"
                        android:text="Muhamad Rafdan Maulana"
                        android:textColor="@color/primaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold" android:textAlignment="center"/>

                <TextView
                        android:id="@+id/rafdan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Semarang"
                        android:textColor="@color/primary" android:textAlignment="center"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/aijih"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="rraaff.88"/>

                    <ImageView
                            android:id="@+id/imagerafdan"
                            android:paddingLeft="10dp"
                            android:layout_width="29dp"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            app:srcCompat="@android:drawable/sym_action_call"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="6285799444478"/>
                </LinearLayout>
                <TextView
                        android:text="Muhamad Rafdan Maulana adalah seorang Mahasiswa S-1 Teknik Komputer Universitas Diponegoro yang saat ini sudah melaksanakan 2,5 tahun pendidikan"
                        android:layout_width="match_parent"
                        android:layout_height="98dp" android:id="@+id/textView" android:textAlignment="center"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>